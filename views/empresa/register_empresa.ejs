<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navigations') %>
    <form action="/register_empresa" method="POST">
        <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
      
                  <div class="mb-md-5 mt-md-4 pb-5">
      
                    <h2 class="fw-bold mb-2 text-uppercase">Regístrate como empresa</h2>
                    
                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="nombre">Nombre legal de la empresa</label>
                      <input type="text" name="nombre" id="typeEmailX" class="form-control form-control-lg" />
                    </div>

                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="razon_social">Razón social</label>
                      <input type="text" name="razon_social" id="typeEmailX" class="form-control form-control-lg" />
                    </div>
                    
                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="email">Correo</label>
                      <input type="email" name="email" id="typeEmailX" class="form-control form-control-lg" />                      
                    </div>

                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="numero">Numero</label>
                      <input type="text" name="numero" id="typeEmailX" class="form-control form-control-lg" />
                    </div>

                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="rut">Rut de la empresa</label>
                      <input type="text" name="rut" id="typeEmailX" class="form-control form-control-lg" />
                    </div>

                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="cant_empleados">Cantida de empleados</label>
                      <select name="cant_empleados" id="cant_empleados" class="form-select form-select-sm" aria-label=".form-select-sm example" required>
                        <option disabled selected value="">Escoja una opcion</option>
                        <option value="Entre 1 y 10">Entre 1 y 10</option>
                        <option value="Entre 11 y 50">Entre 11 y 50</option>
                        <option value="Entre 51 y 150">Entre 51 y 150</option>
                        <option value="Entre 151 y 300">Entre 151 y 300</option>
                        <option value="Entre 301 y 500">Entre 301 y 500</option>
                        <option value="Entre 501 y 1000">Entre 501 y 1000</option>
                        <option value="Entre 1001 y 5000">Entre 1001 y 5000</option>
                        <option value="Más de 5000">Más de 5000</option>
                      </select>
                    </div>

                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="password">Contraseña</label>
                      <input type="password" id="typePasswordX" class="form-control form-control-lg" name="password" />
                    </div>
                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="website">Pagina web (Dejar en blanco si no tiene)</label>
                      <input type="text" name="website" id="typeEmailX" class="form-control form-control-lg" />
                    </div>

                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Registrarme</button>
      
                   
      
                  </div>
      
                  <div>
                    <p class="mb-0">¿Ya tienes una cuenta?</p>
                    <a href="/login_profesional" class="text-white-50 fw-bold">Ingresa aquí</a>
                  </div>
      
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      </form>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <% if(typeof alert != "undefined") { %>
        <script>
          Swal.fire({
            title: '<%= altertTitle %>',
            text: '<%= alertMessage %>',
            icon: '<%= alertIcon %>',
            showConfirmButton: <%= showConfirmButton %>,
            timer: <%= timer %>
          }).then(()=>{
            window.location='/<%= ruta %>'
          })
        </script>
        <% } %>
</body>
</html>
