<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('partials_e/head') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag/dist/css/multi-select-tag.css">
</head>
<body>
    <%- include('partials_e/nav_empresa') %>

    <form action="/register_oferta" method="POST">
        <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
      
                  <div class="mb-md-5 mt-md-4 pb-5">
      
                    <h2 class="fw-bold mb-2 text-uppercase">Crear oferta de trabajo</h2>
                    
                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="username">Cargo</label>
                      <input type="text" name="cargo" id="typeEmailX" class="form-control form-control-lg" />
                    </div>

                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="names">Modalidad</label>
                      <select name="modalidad" id="modalidad" class="form-select form-select-sm" aria-label=".form-select-sm example" required>
                        <option disabled selected value="">Escoja una opcion</option>
                        <option value="Presencial">Presencial</option>
                        <option value="Hibrido">Hibrido</option>
                        <option value="Remoto">Remoto</option>
                      </select>
                    </div>
                    
                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="surname">Carga Horiaria</label>
                      <select name="carga_horaria" id="modalidad" class="form-select form-select-sm" aria-label=".form-select-sm example" required>
                        <option disabled selected value="">Escoja una opcion</option>
                        <option value="Full-Time">Full-Time</option>
                        <option value="Part-time">Part-time</option>
                        <option value="Por horas">Por horas</option>
                        <option value="Temporiario">Temporiario</option>
                      </select>
                    </div>
                    
                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="email">Cantidad de vacantes</label>
                      <input type="number" name="numero_de_vacantes" id="typeEmailX" class="form-control form-control-lg" />                      
                    </div>

                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="numero">Renta minima <input type="number" name="renta_min" id="typeEmailX" class="form-control form-control-lg" /></label>
                      <label class="form-label" for="numero">Renta maxima <input type="number" name="renta_max" id="typeEmailX" class="form-control form-control-lg" /></label>
                         
                    </div>
                    <div class="form-outline form-white mb-4">
                      <label class="form-label" for="username">Direccion (opcional)</label>
                      <input type="text" name="lugar" id="typeEmailX" class="form-control form-control-lg" />
                    </div>
                    <div>
                      <label class="form-label" for="email">Habilidades</label>
                      <select multiple id="habilidades" name="habilidades">
                        <% options.forEach(option => { %>
                          <option value="<%= option %>"><%= option %></option>
                        <% }); %>
                      </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="form_message">Descripcion</label>
                        <textarea id="form_message" name="descripcion" class="form-control" placeholder="Escriba una descripcion sobre el trabajo." rows="4" required="required" data-error="Please, leave us a message."></textarea>
                    </div>
                    </div>
                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Registrar oferta</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </form>
    <script src="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag/dist/js/multi-select-tag.js"></script>
    <script>
      new MultiSelectTag('habilidades')  // id
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <% if(typeof alert != "undefined") { %>
        <script>
          Swal.fire({
            title: '<%= altertTitle %>',
            text: '<%= alertMessage %>',
            icon: '<%= alertIcon %>',
            showConfirmButton: <%= showConfirmButton %>,
            timer: <%= timer %>
          }).then(()=>{
            window.location='/ <%= ruta %>'
          })
        </script>
        <% } %>
</body>
</html>